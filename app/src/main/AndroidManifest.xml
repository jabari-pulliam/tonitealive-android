<manifest package="com.tonitealive.app"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".ToniteAliveApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--
        <meta-data
            android:name="API_BASE_URL"
            android:value="http://tonitealive-server.herokuapp.com"/>
            -->
        <meta-data
            android:name="API_BASE_URL"
            android:value="http://localhost:8080"/>

        <activity android:name=".ui.views.signin.SignInActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.views.main.MainActivity"/>
        <activity android:name=".ui.views.signup.SignUpActivity"/>
        <activity android:name=".ui.views.user.UserProfileActivity"/>

    </application>

</manifest>
